generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  image       String
  order       Int
  basePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  extras      Extra[]
}

model Size {
  id        String       @id @default(cuid())
  name      ProductSizes
  price     Float
  product   Product      @relation(fields: [productId], references: [id])
  productId String
}

enum ProductSizes {
  SMALL
  MEDIUM
  LARGE
}

model Extra {
  id        String          @id @default(cuid())
  name      ExtraIngredient
  price     Float
  product   Product         @relation(fields: [productId], references: [id])
  productId String
}

enum ExtraIngredient {
  CHEESE
  TOMATO
  ONION
  PEPPER
  MUSHROOM
  OLIVE
  GARLIC
  BASIL
}
